# ==========================
# ENTORNO PRODUCCIÓN (EJEMPLO)
# ==========================
# Copia este archivo a .env y coloca valores reales.
# No subas tus llaves reales al repositorio.

DJANGO_DEBUG=False
DJANGO_SECRET_KEY=pon-una-llave-aleatoria-larga
DJANGO_ALLOWED_HOSTS=tu-dominio.com
DJANGO_CSRF_TRUSTED_ORIGINS=https://tu-dominio.com
SITE_BASE_URL=https://tu-dominio.com

# Base de datos (MySQL)
MYSQL_DB_NAME=consultorio_rc
MYSQL_DB_USER=user
MYSQL_DB_PASSWORD=cambia-esta-clave
MYSQL_DB_HOST=db
MYSQL_DB_PORT=3306
MYSQL_ROOT_PASSWORD=cambia-esta-clave-root

# SMTP (Gmail con contraseña de aplicación o tu proveedor)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=correo@tu-dominio.com
EMAIL_HOST_PASSWORD=clave-app
DEFAULT_FROM_EMAIL="Consultorio RC <correo@tu-dominio.com>"
DJANGO_SEND_EMAILS=True

# MercadoPago (producción)
MERCADOPAGO_PUBLIC_KEY=APP_USR_xxx
MERCADOPAGO_ACCESS_TOKEN=APP_USR_xxx
MERCADOPAGO_TEST_PAYER_EMAIL=
MERCADOPAGO_WEBHOOK_SECRET=define-un-secreto
MERCADOPAGO_FAKE_SUCCESS=0

# Integraciones opcionales
GOOGLE_CALENDAR_ID=
GOOGLE_OAUTH_CLIENT_ID=
GOOGLE_OAUTH_CLIENT_SECRET=
GEMINI_API_KEY=
CHATBOT_API_SECRET=define-un-token

# Seguridad
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_PROXY_SSL_HEADER=True  # Coloca en True si tu proxy/túnel envía X-Forwarded-Proto=https (Cloudflare)
DRF_THROTTLE_ANON=50/min
DRF_THROTTLE_USER=200/min
